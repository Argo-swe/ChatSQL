{
  "database_name": "Orders",
  "database_description": "The orders database is designed to monitor and manage purchase transactions",
  "tables": [
    {
      "name": "users",
      "description": "Table containing account details and personal information about users who make purchases.",
      "table_synonyms": [
        "clients",
        "customers",
        "members",
        "consumers"
      ],
      "columns": [
        {
          "name": "username",
          "type": "string",
          "description": "The unique login name for a user",
          "column_synonyms": [
            "nickname",
            "alias"
          ],
          "references": null
        },
        {
          "name": "email",
          "type": "string",
          "description": "The user's email address",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "name",
          "type": "string",
          "description": "The user's first name",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "surname",
          "type": "string",
          "description": "The user's surname",
          "column_synonyms": null,
          "references": null
        }
      ],
      "primary_key": [
        "username"
      ]
    },
    {
      "name": "products",
      "description": "Table containing information about products, which are items purchased in orders",
      "table_synonyms": [
        "items",
        "articles"
      ],
      "columns": [
        {
          "name": "id",
          "type": "integer",
          "description": "The unique identifier for a product",
          "column_synonyms": [
            "identification",
            "tag"
          ],
          "references": null
        },
        {
          "name": "name",
          "type": "string",
          "description": "The product's name",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "price",
          "type": "decimal",
          "description": "The product's price",
          "column_synonyms": [
            "cost",
            "value",
            "charge",
            "total",
            "amount"
          ],
          "references": null
        },
        {
          "name": "category",
          "type": "integer",
          "description": "Foreign key referencing the category to which the product belongs",
          "column_synonyms": null,
          "references": {
            "table_name": "categories",
            "field_name": "id"
          }
        }
      ],
      "primary_key": [
        "id"
      ],
      "foreign_keys": [
        {
          "foreign_key_column_names": [
            "category"
          ],
          "reference_table_name": "categories",
          "reference_column_names": [
            "id"
          ]
        }
      ]
    },
    {
      "name": "orders",
      "description": "Table containing information on orders placed by users, including general billing details",
      "table_synonyms": [
        "deliveries",
        "purchases",
        "sales",
        "buys",
        "transactions"
      ],
      "columns": [
        {
          "name": "id",
          "type": "integer",
          "description": "The unique identifier for an order",
          "column_synonyms": [
            "identification",
            "tag"
          ],
          "references": null
        },
        {
          "name": "username",
          "type": "string",
          "description": "Foreign key referencing the user who made the order",
          "column_synonyms": null,
          "references": {
            "table_name": "users",
            "field_name": "username"
          }
        },
        {
          "name": "order_date",
          "type": "date",
          "description": "Date when the order was made",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "payment_method",
          "type": "string",
          "description": "The payment method used for the order",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "total",
          "type": "numeric(10,2)",
          "description": "The total amount of the order",
          "column_synonyms": null,
          "references": null
        }
      ],
      "primary_key": [
        "id"
      ],
      "foreign_keys": [
        {
          "foreign_key_column_names": [
            "username"
          ],
          "reference_table_name": "users",
          "reference_column_names": [
            "username"
          ]
        }
      ]
    },
    {
      "name": "categories",
      "description": "Table containing information on categories, which correspond to the type or class of products",
      "table_synonyms": [
        "classes",
        "groups",
        "types"
      ],
      "columns": [
        {
          "name": "id",
          "type": "integer",
          "description": "The unique identifier for a category",
          "column_synonyms": [
            "identification",
            "tag"
          ],
          "references": null
        },
        {
          "name": "name",
          "type": "string",
          "description": "The category's name",
          "column_synonyms": null,
          "references": null
        },
        {
          "name": "description",
          "type": "string",
          "description": "The category's description",
          "column_synonyms": null,
          "references": null
        }
      ],
      "primary_key": [
        "id"
      ]
    },
    {
      "name": "order_items",
      "description": "Table containing the products added to an order and their quantity",
      "table_synonyms": [
        "details"
      ],
      "columns": [
        {
          "name": "order_id",
          "type": "integer",
          "description": "Foreign key referencing the order to which the item belongs",
          "column_synonyms": null,
          "references": {
            "table_name": "orders",
            "field_name": "id"
          }
        },
        {
          "name": "product_id",
          "type": "integer",
          "description": "Foreign key referencing the product in the order",
          "column_synonyms": null,
          "references": {
            "table_name": "products",
            "field_name": "id"
          }
        },
        {
          "name": "quantity",
          "type": "integer",
          "description": "The quantity of the product in the order",
          "column_synonyms": [
            "total",
            "number"
          ],
          "references": null
        }
      ],
      "primary_key": [
        "order_id",
        "product_id"
      ],
      "foreign_keys": [
        {
          "foreign_key_column_names": [
            "order_id"
          ],
          "reference_table_name": "orders",
          "reference_column_names": [
            "id"
          ]
        },
        {
          "foreign_key_column_names": [
            "product_id"
          ],
          "reference_table_name": "products",
          "reference_column_names": [
            "id"
          ]
        }
      ]
    }
  ]
}
